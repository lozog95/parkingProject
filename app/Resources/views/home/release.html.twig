{% extends 'base.html.twig' %}
{% block title %}Release{% endblock %}

{% block body %}
    <header class="masthead">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <h2>Release your space</h2>
                        <p>Choose slot(s):
                            {% if entities!=null %}
                            {% for item in entities %}
                                {{ item.id }}
                            {% endfor %}
                        </p>
                        <div class="row">
                            <div class="col-lg-8 mx-auto">
                                {{ form_start(form) }}
                                {{ form_widget(form) }}
                                {{ form_end(form) }}
                            </div>
                        </div>
                        {% else %}
                            <p>You don't have any slot to release!</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}
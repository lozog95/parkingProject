{% extends 'base.html.twig' %}
{% block title %}Book{% endblock %}
{% block body %}

    <header class="masthead">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <h2>Book a place</h2>
                        {% if entities!= null %}
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Number</th>
                                <th>Owner</th>
                                <th>available from</th>
                                <th>to</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in entities %}
                            <tr>
                                <td>{{ item.id }}</td>
                                <td>{{ item.owner.getUsername() }}</td>
                                <td>{{ item.getReleaseStart()|date("d/m/Y") }}</td>
                                <td>{{ item.getReleaseEnd()|date("d/m/Y") }}</td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% else %}
                            <p>We're sorry, but all slots are already booked...</p>
                        {% endif %}
                    </div>{% if entities!= null %}
                        <div class="col-lg-4 mx-auto">
                            <h3>Select:</h3>
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            {{ form_end(form) }}
                        </div>{% endif %}
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

